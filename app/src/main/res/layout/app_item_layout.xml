<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_cover"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_margin="@dimen/dp_5"
        android:src="@color/color_primary_dark"
        app:layout_constraintBottom_toTopOf="@id/text_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_tem"
        android:textColor="@color/color_dark"
        app:layout_constraintLeft_toLeftOf="@id/image_cover"
        app:layout_constraintRight_toRightOf="@id/image_cover"
        app:layout_constraintTop_toBottomOf="@id/image_cover" />

</android.support.constraint.ConstraintLayout>
